@{
    ViewBag.Title = "Medicine_Category_Master";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="row">
    <div class="page-header">
        <h4>Medicine Category Master</h4>
    </div>
    <form class="form-horizontal">
        <div class="form-group-sm">
            <div class="row form-group">
                <div class="col-lg-6">
                    <div class="col-lg-4">
                        <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#addCategory"><i class="fa fa-th-list"></i>&nbsp; Add Category</button>
                    </div>
                </div>
            </div>

            <div id="addCategory" class="modal fade" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4>New Medicine Category</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label class="control-label">Category Name:</label>
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="CategoryName" />
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label class="control-label">Description:</label>
                                </div>
                                <div class="col-lg-6">
                                    <textarea class="form-control" name="description"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary " data-dismiss="modal">Save</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>            
            <div class="row form-group">
                <div class="col-lg-12">
                    <hr />
                    <div class="table-responsive">
                        <table class="table table-striped" id="categorytable">
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Description</th>                                
                                <th>Action</th>
                            </tr>                          
                        </table>
                    </div>
                </div>
            </div>

            <div id="editCategory" class="modal fade" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4>Edit Medicine Category</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label class="control-label">Category Name:</label>
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="CategoryName" />
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-6">
                                    <label class="control-label">Description:</label>
                                </div>
                                <div class="col-lg-6">
                                    <textarea class="form-control" name="description"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
