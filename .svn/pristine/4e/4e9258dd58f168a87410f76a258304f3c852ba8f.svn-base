@model System.Data.DataSet
@{
    ViewBag.Title = "Unit Of Measurement";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row">
    <div class="form-horizontal">
        <div class="col-lg-12">
            <div class="col-lg-4">
                <a class="btn btn-primary" href="~/StockManagement/UOM"><i class="fa fa-plus"></i> &nbsp; Add New Unit</a>
            </div>
        </div>
        <div class="col-lg-12">
            <hr/>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Unit Id</th>
                            <th>Unit Name</th>
                            <th>Unit of Measurement</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            for (int i = 0; i <= Model.Tables[0].Rows.Count - 1; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model.Tables[0].Rows[i]["unitid"]</td>
                                    <td>@Model.Tables[0].Rows[i]["unitname"]</td>
                                    <td>@Model.Tables[0].Rows[i]["uom"]</td>
                                    <td>@Html.ActionLink("Edit", "Update", new { unitid = Model.Tables[0].Rows[i]["unitid"] })</td>
                                </tr>
                            }
                        }
                        catch (Exception) { }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





