@model System.Data.DataSet
@{
    ViewBag.Title = "sisterDetails";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h4>Sister Details</h4>
        <hr />
    </div>
    <div class="form-horizontal">
        <div class="col-lg-12">
            <div class="col-lg-4">
                <a class="btn btn-primary" href="~/Sister/Registration"><i class="fa fa-plus"></i> &nbsp; New Registration</a>
            </div>
        </div>
        <div class="col-lg-12 form-group">
            <hr/>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sister Id</th>
                            <th>Sister Name</th>
                            <th>Registration Date</th>
                            <th>Contact No </th>
                            <th>Age</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i <= Model.Tables[0].Rows.Count - 1; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.Tables[0].Rows[i][1]</td>
                                <td>@Model.Tables[0].Rows[i][3]&nbsp;&nbsp; @Model.Tables[0].Rows[i][4] &nbsp;&nbsp; @Model.Tables[0].Rows[i][5]</td>
                                <td>@Model.Tables[0].Rows[i][2]</td>
                                <td>@Model.Tables[0].Rows[i][6]</td>
                                <td>@Model.Tables[0].Rows[i][9]</td>
                                <td>@Html.ActionLink("Edit", "Update", new { sisterid = Model.Tables[0].Rows[i][1] })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>