@{
    ViewBag.Title = "Billing";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row">
    <div class="page-header">
        <h4>IPD Billing</h4>
    </div>
    <form class="form-horizontal">
        <div class="form-group-sm">
            <div class="row">
                <!--Row 1-->
                <div class="col-lg-12">
                    <div class="col-lg-12 thumbnail">
                        <div class="col-lg-4">
                            <div class="col-lg-5">
                                <label class="control-label">Patient Id:</label>
                            </div>
                            <div class="col-lg-7">
                                <input type="text" class="form-control" name="Patient_Id" />
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="col-lg-5">
                                <button class="btn btn-info btn-md" name="search"><i class="fa fa-search">&nbsp Search</i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-group">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        Patient Details
                             <div class="row">
                                 <!-- col1 -->
                                 <div class="col-lg-4">
                                     <div class="col-lg-5">
                                         <label class="control-label">IPD Reg. No:</label>
                                     </div>
                                     <div class="col-lg-7">
                                         <label id="IPD_Reg_No" class="control-label">-</label>
                                     </div>
                                 </div>
                                 <div class="col-lg-4">
                                     <div class="col-lg-5">
                                         <label class="control-label">Admit Date:</label>
                                     </div>
                                     <div class="col-lg-7">
                                         <label id="Admit_Date" class="control-label">-</label>
                                     </div>
                                 </div>
                                 <div class="col-lg-4">
                                     <div class="col-lg-5">
                                         <label class="control-label">Admit Time:</label>
                                     </div>
                                     <div class="col-lg-7">
                                         <label id="Admit_Time" class="control-label">-</label>
                                     </div>
                                 </div>
                             </div>
                        <div class="row">
                            <br />
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">Patient Name:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="Patient_Name" class="control-label">-</label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">Discharge Date:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="Discharge_Date" class="control-label">-</label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">Discharge Time:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="Discharge_Time" class="control-label">-</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <br />
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">Final Diagnosis:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="Final Diagnosis" class="control-label">-</label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">No. of Days:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="No_of_Days" class="control-label">-</label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">Day Care:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="Day_Care" class="control-label">-</label>
                                </div>
                            </div>
                        </div>
                         <div class="row">
                            <br />
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">Consultant:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="Consultant" class="control-label">-</label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">TPA:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="TPA" class="control-label">-</label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="col-lg-5">
                                    <label class="control-label">CNN:</label>
                                </div>
                                <div class="col-lg-7">
                                    <label id="CNN" class="control-label">-</label>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="panel-body">                      
                        <div class="row form-group">
                            <div class="col-lg-12 thumbnail">
                                <div class="col-lg-3">
                                    <select id="particulars" class="form-control">
                                        <option>Select Particular</option>
                                    </select>
                                </div>
                                <div class="col-lg-3">
                                    <input id="qty" type="text" class="form-control" placeholder="Qty." />
                                </div>
                                <div class="col-lg-3">
                                    <input id="rate" type="text" class="form-control" placeholder="Charge." />
                                </div>
                                <div class="col-lg-3" align="center">
                                    <button id="add" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>&nbsp Add</button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <br />
                            <div class="table-responsive">
                                <table class="table table-stripped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Particulars</th>
                                            <th>Charges</th>
                                            <th>Qty.</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>Consultation</td>
                                            <td>100</td>
                                            <td>1</td>
                                            <td>100</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="row">
                            <hr />
                            <div class="col-lg-4 pull-right">
                                <div class="col-lg-3">
                                    <label class="control-label">Total:</label>
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="Total" readonly />
                                </div>
                            </div>                           
                        </div>                        

                    </div>
                </div>
            </div>
            <!--Panel close-->

            <div class="row">
                <br />
                <div class="col-lg-12" align="center">
                    <button class="btn btn-info btn-md" value="Print"><i class="fa fa-print">&nbsp Print</i></button>
                    <button class="btn btn-primary btn-md" value="New"><i class="fa fa-plus">&nbsp New</i></button>
                    <button class="btn btn-success btn-md" value="Save"><i class="fa fa-save">&nbsp Save</i></button>
                    <button class="btn btn-info btn-md" value="edit"><i class="fa fa-edit">&nbsp Edit</i></button>
                    <button class="btn btn-danger btn-md" value="delete"><i class="fa fa-trash">&nbsp Delete</i></button>
                    <button class="btn btn-default btn-md" value="Clear"><i class="fa fa-repeat">&nbsp Clear</i></button>
                </div>
            </div>
        </div>
    </form>
</div>
