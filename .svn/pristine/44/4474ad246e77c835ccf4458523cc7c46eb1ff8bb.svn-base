@{
    ViewBag.Title = "Consent_Form";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row">
    <div class="page-header">
        <h4>Consent Form</h4>
    </div>
    <form class="form-horizontal">
        <div class="form-group-sm">           
            <div class="row ">
                <div class="col-lg-12">
                    <div class="col-lg-12 thumbnail">
                        <div class="col-lg-4">
                            <div class="col-lg-6">
                                <label class="control-label">Patient Id:</label>
                            </div>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" name="Patient_Id" />
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="col-lg-5">
                                <button class="btn btn-info btn-sm" name="search"><i class="fa fa-search">&nbsp Search</i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel-group">
                        <div class="panel panel-info">

                            <div class="panel-heading">
                                <div class="row form-group">
                                    <h5>Patient Details</h5>
                                    <!-- col1 -->
                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label input-sm">Patient Id:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <label id="Patient_Id" class="control-label input-sm">-</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="col-lg-3">
                                            <label class="control-label input-sm">Patient Name :</label>
                                        </div>
                                        <div class="col-lg-9">
                                            <label id="Patient_Name" class="control-label input-sm">-</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label input-sm">Admit Date:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <label id="Admit_Date" class="control-label input-sm">-</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label input-sm">Admit Time:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <label id="Admit_Time" class="control-label input-sm">-</label>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label input-sm">Age:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <label id="Age" class="control-label input-sm">-</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="panel-body">

                                <div class="row form-group">
                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label">Date:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <input type="text" class="form-control" readonly />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label">Time:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <input type="text" class="form-control" readonly />
                                        </div>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label">Visitor Name:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <input type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label">Witness Name:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <input type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="col-lg-6">
                                            <label class="control-label">Place:</label>
                                        </div>
                                        <div class="col-lg-6">
                                            <input type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <!--Row 2-->
                                <div class="row form-group">
                                    <br />
                                    <div class="col-lg-12" align="center">
                                        <button class="btn btn-info btn-md" value="New" onclick=""><i class="fa fa-print">&nbsp; Print</i></button>
                                        <button class="btn btn-success btn-md" value="Save"><i class="fa fa-save">&nbsp; Save</i></button>
                                        <button class="btn btn-danger btn-sm" value="Clear"><i class="fa fa-repeat">&nbsp; Clear</i></button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
