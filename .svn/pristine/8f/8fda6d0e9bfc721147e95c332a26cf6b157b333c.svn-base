@model System.Data.DataSet
@{
    ViewBag.Title = "OTDetails";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="row">
    <form class="form-horizontal" action="/OT/OTDetails" method="post">
        <div class="col-lg-12">
            <div class="col-lg-4">
                <a class="btn btn-primary" href="~/OT/OTRegistration"><i class="fa fa-plus"></i> &nbsp; Add New OT</a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Patient Id</th>
                            <th>OT ID</th>
                            <th>OT Date (MM/DD/YYYY)</th>                          
                            <th>Duration From (AM/PM)</th>
                            <th>Duration To (AM/PM)</th>
                            <th>Operating Surgeon</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            for (int i = 0; i <= Model.Tables[0].Rows.Count - 1; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model.Tables[0].Rows[i]["patientid"]</td>
                                    <td>@Model.Tables[0].Rows[i]["regid"]</td>
                                    <td>@Model.Tables[0].Rows[i]["otdate"]</td>
                                    @{
                                        DateTime from = Convert.ToDateTime(Model.Tables[0].Rows[i]["durationfrom"]);
                                        DateTime to = Convert.ToDateTime(Model.Tables[0].Rows[i]["durationto"]);
                                    }                                    
                                    <td>@from.ToShortTimeString()</td>
                                    <td>@to.ToShortTimeString()</td>
                                    <td>@Model.Tables[0].Rows[i]["operatingsurgeon"]</td>
                                    <td>@Html.ActionLink("Edit", "OTRegistrationUpdate",new { regid = Model.Tables[0].Rows[i]["regid"] })</td>
                                </tr>
                            }
                        }
                        catch (Exception) { }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>