<script type="text/javascript">
    // Investigation Code
    $('#backtotnvn').on('click', function () {
        $('#Investigations').removeClass('active');
        $('#inv').removeClass('active');
        $('#Tn_Vn').addClass('active');
        $('#tnvn').addClass('active');
    });

    /* Tnvn Code*/
    //back
    $('#backtomedi').on('click', function () {
        $('#Tn_Vn').removeClass('active');
        $('#tnvn').removeClass('active');
        $('#Medicine_Details').addClass('active');
        $('#medi').addClass('active');
    });
    //next
    $('#gotoinv').on('click', function () {
        $('#Tn_Vn').removeClass('active');
        $('#tnvn').removeClass('active');
        $('#Investigations').addClass('active');
        $('#inv').addClass('active');
    });


    /* Medicine Details Code*/
    //back
    $('#backtoprev').on('click', function () {
        $('#Medicine_Details').removeClass('active');
        $('#medi').removeClass('active');
        $('#Previous_Details').addClass('active');
        $('#prev').addClass('active');
    });
    //next
    $('#gototnvn').on('click', function () {
        $('#Medicine_Details').removeClass('active');
        $('#medi').removeClass('active');
        $('#Tn_Vn').addClass('active');
        $('#tnvn').addClass('active');
    });


    /* Previous Details Code*/
    //back
    $('#backtopre').on('click', function () {
        $('#Previous_Details').removeClass('active');
        $('#prev').removeClass('active');
        $('#Presenting_Details').addClass('active');
        $('#pre').addClass('active');
    });
    //next
    $('#gotomedi').on('click', function () {
        $('#Medicine_Details').addClass('active');
        $('#medi').addClass('active');
        $('#Previous_Details').removeClass('active');
        $('#prev').removeClass('active');
    });

    // Present Details Code
    $('#gotoprev').on('click', function () {
        $('#Presenting_Details').removeClass('active');
        $('#pre').removeClass('active');
        $('#Previous_Details').addClass('active');
        $('#prev').addClass('active');
    });

</script>







