@{
    ViewBag.Title = "Login";
   
}

<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Minimal Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, 
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/Content/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <link href="~/Content/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet">
    <script src="~/Content/js/jquery.min.js"> </script>
    <script src="~/Content/js/bootstrap.min.js"> </script>
</head>
<body>
    <div class="login">
        <h1><a href="#">Hospital Information Management System</a></h1>
        <div class="login-bottom">
            <h2>User Login</h2>
            <form>
                <div class="col-md-6">
                    <div class="login-mail">
                        <input type="text" placeholder="Email" id="Username" required>
                        <i class="fa fa-envelope"></i>
                    </div>
                    <div class="login-mail">
                        <input type="password" placeholder="Password" id="Password" required>
                        <i class="fa fa-lock"></i>
                    </div>
                    <a class="news-letter " href="#">
                        <label class="checkbox1">
                            <input type="checkbox" name="checkbox"><i> </i>Forget Password</label>
                    </a>


                </div>
                <div class="col-md-6 login-do">
                    <label class="hvr-shutter-in-horizontal login-sub">
                        <input type="submit" value="login " onclick="checkLogin()">
                    </label>
                    <p>Do not have an account?</p>
                    <a href="~/Home/Signup" class="hvr-shutter-in-horizontal">Signup</a>
                </div>

                <div class="clearfix"></div>
            </form>
        </div>
    </div>
    <!---->
    <div class="copy-right">
        <p>&copy; 2014 RUBRAIN. All Rights Reserved | Design by <a href="http://rubrains.com" target="_blank">RUBRAIN</a> </p>
    </div>
    <!---->
    <!--scrolling js-->
    <script src="~/Content/js/jquery.nicescroll.js"></script>
    <script src="~/Content/js/scripts.js"></script>
    <!--//scrolling js-->
    <script>
        function checkLogin() {
            var user = document.getElementById('Username').value;
            var userpass = document.getElementById('Password').value;
            if (user == 'Admin' && userpass == 'password') {
                window.open('/Home/Dashboard');
            }
            else {

            }
        }
    </script>
</body>
</html>

